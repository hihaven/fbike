<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.Book" table="book" catalog="bookStore">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native"></generator>
        </id>
        
        <property name="bookId" type="java.lang.String">
            <column name="bookid" length="5" not-null="true"></column>
        </property>
        
        <property name="type" type="java.lang.String">
            <column name="type" length="10" not-null="true" />
        </property>
        
        <property name="name" type="java.lang.String">
            <column name="name" length="40" not-null="true" />
        </property>
        
        <property name="author" type="java.lang.String">
            <column name="author" length="10" not-null="true" />
        </property>
        <property name="press" type="java.lang.String">
            <column name="press" length="40" not-null="true" />
        </property>
        
        <property name="date" type="java.lang.String">
            <column name="date" not-null="true" />
        </property>
        
        <property name="price" type="java.lang.Float">
            <column name="price" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
